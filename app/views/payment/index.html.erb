<div class="container mt-5">
  <h2 class="mb-3">Payment Summary</h2>
  <div class="table-responsive">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>Name</th>
          <th>Breed</th>
          <th>Type</th>
          <th>Price</th>
          <th>Adoption Duration</th>
        </tr>
      </thead>
      <tbody>
        <% cart.each do |item| %>
          <tr>
            <td><strong><%= item["name"] %></strong></td>
            <td><%= item["breed"] %></td>
            <td><%= item["dog_type"] %></td>
            <td>$<%= item["price"] %></td>
            <td><%= item["adoption_years"] %> year(s)</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <div class="col-md-4 offset-md-8">
      <ul class="list-group">
        <li class="list-group-item">Subtotal: $<%= sub_total %></li>
        <li class="list-group-item">GST: $<%= gst_charged %></li>
        <li class="list-group-item">PST: $<%= pst_charged %></li>
        <li class="list-group-item list-group-item-secondary">Total: $<%= total %></li>
      </ul>
    </div>
  </div>

  <%= form_tag(payment_create_path, method: :post, class: 'mt-3') do %>
    <%= button_tag(type: 'submit', class: 'btn btn-primary btn-lg btn-block') do %>
      Proceed to Payment
    <% end %>
  <% end %>
</div>
